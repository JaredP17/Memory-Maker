
<div style="background-color:lightyellow;">
<div class="columns" style="background-color:lightgray;text-align:center; padding: 5px; padding-left:400px;">
<a href="/newMemory"><button class="button is-link" style="margin-left:10px;margin-right:5px;;margin-top:10px;">Create a memory</button></a>
<div>
<button class="button button is-link is-light" style="margin-top:10px;">Recent</button>
<button class="button button is-link is-light" style="margin-top:10px;">Range</button>
<button class="button button is-link is-light" style="margin-top:10px;">Category</button>
<a href="/login"></a><button class="button button is-link is-light" style="margin-top:10px;">Logout</button></a>
</div>

</div>
<div class="columns">
<div class="column" style="border: 1px solid black; margin: 50px; text-align:center; background-color:#eef3fc;">
<div class="title">Memories Feed</div>
<!-- Pass in data from server.js -->
<ul>
  {{#each memories}}
  	<li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Date:</span> {{this.dat}}</p>
      <p><span class="label">Rating:</span> {{this.rat}}</p>
      <p><span class="label">Location:</span> {{this.loc}}</p>
      <p><span class="label">Image:</span> {{this.img}}</p>

      <button data-id="{{this.id}}" class="delmemory">Delete</button>

      <a href="/{{this.id}}">Update this memory</a>
  	</li>
  {{/each}}
</ul>
</div>
<div class="column" style="border: 1px solid black; margin:50px; background-color:#eef3fc; text-align:center;">
<div class="title">Add a memory</div>

<form class="create-form">

  <div class="form-group">
    <label for="dat">Date:</label><br>
    <input type="text" id="dat" name="date">
  </div>

  <label for="desc">Description:</label><br>
  <div class="form-group">
    <textarea id="desc" name="description" rows="8" cols="40"></textarea>
  </div>

  <div class="form-group">
    <label for="loc">Location:</label><br>
    <input type="text" id="loc" name="location">
  </div>

  <div class="form-group">
    <label for="img">Image:</label><br>
    <input type="text" id="img" name="image">
  </div>

    <div class="form-group">
    <label for="rat">Rating:</label><br>
    <input type="text" id="rat" name="Rating">
  </div>
  <button type="submit" style="padding-bottom:10px;">Add Memory</button>
</form>
  </div>
  </div>
  </div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/memories.js"></script>
